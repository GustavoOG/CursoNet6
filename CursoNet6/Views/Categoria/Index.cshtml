@model IEnumerable<CursoNet6.Modelos.Categoria>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6>">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nueva Categoria
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Categoria</th>
                    <th>Orden</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.NombreCategoria</td>
                        <td width="30%">@item.MostrarOrden</td>
                        <td class="text-center">
                            <div class="w-75 btnbtn-group" role="group">
                                <a asp-controller="Categoria" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2"> <i class="fas fa-edit"></i></a>
                                <a asp-controller="Categoria" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2"> <i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    }
    else
    {
        <p>No hay registros de Categoria</p>
    }
</div>
